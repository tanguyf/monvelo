<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/logo_blue_light"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam sed elit erat. Vivamus aliquet, enim eleifend varius luctus, justo libero congue elit, ac ultrices dolor justo eu massa. Nullam lobortis, dui venenatis eleifend tincidunt, ipsum enim consectetur augue, convallis sagittis urna nibh ac justo. Fusce vel eros at ipsum volutpat laoreet. Etiam ultricies orci sit amet neque imperdiet lacinia. Donec non rutrum magna, ut tempor tortor. Curabitur eu aliquet nunc, id iaculis ligula. "
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/corner_button"
                android:drawableLeft="@drawable/ic_action_good"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:text="@string/rate_app"
                android:textColor="@color/logo_blue"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/corner_button"
                android:drawableLeft="@drawable/ic_action_email"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:text="@string/mail_me"
                android:textColor="@color/logo_blue"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/corner_button"
                android:drawableLeft="@drawable/ic_action_share"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:text="@string/share_it"
                android:textColor="@color/logo_blue"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
